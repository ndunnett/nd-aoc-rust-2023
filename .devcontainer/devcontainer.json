{
  "name": "Rust",
  "image": "mcr.microsoft.com/devcontainers/rust:bookworm",
  "postCreateCommand": {
    "update-rust": "rustup update"
  },
  "runArgs": ["--env-file", "${localWorkspaceFolder}/.devcontainer/.env"],
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer"
      ]
    }
  }
}